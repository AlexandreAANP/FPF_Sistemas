                            <div class="row py-3"> 
                     {% for items in restoration_area.colContent %}
                                <div class="col item-index">
                                        <img src='{{items.filename}}' class="img-squares">
                                        <i class="mdi-48px {{items.url}} index-icon-restoration d-flex justify-content-center"></i>

                                        <p class=" d-flex justify-content-center font-weight-bold py-4">{{items.title}}</p>
                                </div>
                      {% endfor %}
                            </div>
           


                            <div class="row py-3"> 
                            {% for i in 0..7 %}
                                <div class="col item-index">
                                        <img src='assets/images/restaurante-item-hover-1.svg' class="img-squares">
                                        <span class="material-icons index-icon-restoration d-flex justify-content-center"></span>
                                        <p class=" d-flex justify-content-center font-weight-bold"></p>
                                </div>
                            {% endfor %}

                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}


  <span class="background-squares-right"></span>  
