{% set business_header = LayoutFunctions.getAPI('content?type=files&area=content-area-business-header&fields=text,url&language=' ~ app.request.locale) %}
    {% if business_header is defined %}

        {% set Title = null %}
        {% set Description = null %}
        {% set url_first_image = null %}
        {% set  url_second_image = null %}
        
        {% for files_area in business_header.colContent %}
            {% if files_area.referenceKey == 'files-business' %}
                {% set Title = files_area.title %}
            
                {% set Description = files_area.description %}
                    <pre>{{dump(files_area)}}</pre>
                {% set url_first_image = files_area.filename %}
                
                {% set url_second_image = files_area.url %}
            
            {% endif %}

        {% endfor %}
       
    {% endif %}

     {% set restoration_area = LayoutFunctions.getAPI('content?type=files&area=content-area-business-index&fields=text,url&language=' ~ app.request.locale) %}

    
       

                <!--Restauração-->
                <div class="container py-5">

                    <div class="row">
                        <!--Negocios-->
                        <div class="container row pb-4">
                            <div class="col-12 d-flex justify-content-center py-3"><span class="tittle-body-index">{{Title}}</span></div>
                            <div class="col-12 d-flex justify-content-center"><span class="subtittle-body-index">{{Description}}</span></div>
                        </div>
            {% if restoration_area is defined %}
                        <div class="container row py-3">
                            <div class="col-12 d-flex justify-content-center mt-3 mb-4"><span style="background-image: url('{{url_first_image}}');"  class="index-img-restauration"></div>
                            <div class="col-12 d-flex justify-content-center"><span class="index-restoration">{% trans %}Restoration{% endtrans %}</span></div>
                            <style type="text/css">.index-img-restauration:hover{ background-image: url("{{url_second_image}}") !important; }</style>
                        </div>
                        <div class="container">
                            {% set items = ['Restaurant','Cerveijarias','Fast-Food','Marisquerias', 'Pizzarias', 'Snack-bar', 'take-away', 'Discotecas'] %}
